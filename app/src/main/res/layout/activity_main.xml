<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171717">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_gravity="center">

        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lalu Lintas App"
            android:gravity="center"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp" />

        <!-- Tombol Besar -->
        <Button
            android:id="@+id/btn_about"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="Tentang Aplikasi"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#c8ff01"
            android:textColor="#171717"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btn_feature"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="Fitur Aplikasi Dan Dataset"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#c8ff01"
            android:textColor="#171717"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btn_architecture"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="Arsitektur Model"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#c8ff01"
            android:textColor="#171717"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btn_simulation"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="Jalankan Simulasi"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#c8ff01"
            android:textColor="#171717" />

    </LinearLayout>
</ScrollView>
